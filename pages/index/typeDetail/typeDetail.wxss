/* 商品列表 */
.goods-box {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  padding: 0 20rpx;
  justify-content: space-between;
  flex-wrap: wrap;
}
.good-img {
  width: 345rpx;
  height: 400rpx;
  border-radius: 20rpx;
}
.good-bootom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;

  margin: 0 10rpx 30rpx 10rpx ;
}
.good-title {
  font-size: 36rpx;
  margin: 10rpx 10rpx;

  /* 处理文字超出范围，限制文字显示 */
  width: 330rpx;
  height: 100rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.good-price{
  color: red;
  font-size: 40rpx;
}
.good-tag {
  color: rgb(175, 175, 175);
}