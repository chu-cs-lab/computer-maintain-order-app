.menu-wrap {
  display: flex;
  flex-direction: row;
  margin: 20rpx 20rpx;
  padding: 20rpx 0rpx;
  justify-content: space-between;
  border-bottom: 1rpx solid #eee;
}

.line-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;  
  padding: 10rpx;
  
  transition: all 0.3s ease;
}

.item-label {
  font-weight: bold;
  color: #333;
}

.item-data {
  color: #555;
}
.order-wrap {
  margin: 20rpx 20rpx;
  border: 1rpx solid #eee;
  border-radius: 20rpx;
  padding: 20rpx 20rpx;
}
.good-img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.good-wrap {
  display: flex;
  flex-direction: row;
  margin-bottom: 15rpx;
}
.good-bottom {
  display: flex;
  flex-direction: row;
  width: 500rpx;
  justify-content: space-between;
  margin-top: 60rpx;
}
.oder-id {
  font-size: 28rpx;
  margin-bottom: 15rpx;
}

.choose-type {
  border-bottom: 5rpx solid red;
  padding-bottom: 20rpx;
}

.total-money {
  text-align: right;
  margin: 20rpx 0;  text-align: right;
  margin: 20rpx 0;
  height: 40px;
  border-bottom: 2px solid #f3f4f6;  
}
.line-item {
  margin: 10rpx 0;
}

.red {
  color: red;
}
.but-wrap {
  text-align: right;
}


.comment {
  padding: 0rpx 20rpx;
  border-radius: 20rpx;
  border: 1rpx orange solid;
  color: orange;
}


